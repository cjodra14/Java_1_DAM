package ejers1;

public class Division {
	int [] n=new int[5];
	boolean primeraLinea=true;
	boolean error=false;
	
	void calcular() {
		for(int i=0;i<5;i++){
			int aux1, aux2;
			aux1=(int)(Math.random()*10);
			aux2=(int)(Math.random()*10);
			try {
			n[i]=aux1/aux2;
			}
			catch(ArithmeticException e) {
				System.out.println("			"+aux1+"			"+aux2+"				Error división por 0");
				/*otra opcion es hacer:
				while(aux2==0) {
					aux2=(int)(Math.random()*10);
					}
				n[i]=aux1/aux2;
				*/
				i--;
				
				error=true;
				
			}
			
			if(error!=true) {visualizar(aux1,aux2,i);
			primeraLinea=false;}
			
		}
	}
	
	
	
	void visualizar(int aux1,int aux2, int i) {
		if(primeraLinea) {
			System.out.println("Primer número: 		"+aux1+" Segundo número: 	"+aux2+" Resultado de la división: 	"+n[i]);
		}else {
			System.out.println("			"+aux1+"			"+aux2+"				"+n[i]);}
	}
	
	
	public static void main(String[] args) {
		Division ob=new Division();
		ob.calcular();
	}

}
